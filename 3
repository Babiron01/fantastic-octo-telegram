// Prompt the user for input
let basicSalary = parseFloat(prompt("Enter your basic salary: "));
let benefits = parseFloat(prompt("Enter your benefits: "));

// Define tax rates and deduction amounts
const PAYE_RATE = 0.3; // 30% tax rate
const NHIF_RATE = 0.025; // 2.5% NHIF deduction rate
const NSSF_RATE = 0.06; // 6% NSSF deduction rate
const PERSONAL_RELIEF = 2400; // Personal relief amount

// Calculate gross salary
let grossSalary = basicSalary + benefits;

// Calculate tax
let taxableIncome = grossSalary - PERSONAL_RELIEF;
let payee = Math.max(0, PAYE_RATE * taxableIncome);

// Calculate NHIF and NSSF deductions
let nhifDeductions = NHIF_RATE * grossSalary;
let nssfDeductions = NSSF_RATE * grossSalary;

// Calculate net salary
let netSalary = grossSalary - payee - nhifDeductions - nssfDeductions;

// Print the results
console.log(`Gross salary: ${grossSalary.toFixed(2)}`);
console.log(`Payee: ${payee.toFixed(2)}`);
console.log(`NHIF Deductions: ${nhifDeductions.toFixed(2)}`);
console.log(`NSSF Deductions: ${nssfDeductions.toFixed(2)}`);
console.log(`Net salary: ${netSalary.toFixed(2)}`);
